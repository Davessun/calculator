           <!-- The first table row that holds one, two three and plus-->
           <tr>
                 <td><input type="button" name="one" value="1" onclick="mycalculator.display.value += '1'"></td>
                 <td><input type="button" name="two" value="2" onclick="mycalculator.display.value += '2'"></td>
                 <td><input type="button" name="three" value="3" onclick="mycalculator.display.value += '3'"></td>
                 <td><input type="button" name="plus" value="+" onclick="mycalculator.display.value += '+'"></td>
          </tr><!-- End of the first row that holds one, two three and plus-->

