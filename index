          <tr>
                 <td><input type="button" name="four" value="4" onclick="mycalculator.display.value += '4'"></td>
                 <td><input type="button" name="five" value="5" onclick="mycalculator.display.value += '5'"></td>
                 <td><input type="button" name="six" value="6" onclick="mycalculator.display.value += '6'"></td>
